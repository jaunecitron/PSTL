type parametre = {nom : string ; valeur : float};;
type parametres = parametre list;;




class instruction nom param = object
      val mutable nom = nom
      val mutable param = param
      method to_string =
	let rec assemble l =
	  match l with
	    [] -> ""
	  | h::t -> match h with
      		      {nom = nom; valeur = valeur} ->
		      String.concat " " [(String.concat "" [nom;string_of_float(valeur)]); assemble(t)]
	in String.concat " " [nom; assemble(param)]
      method add_param elt =
	
end;;


